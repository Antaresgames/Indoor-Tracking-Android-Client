<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<TextView  
	android:id="@+id/textViewAppName"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@string/stringAppName"
    android:gravity="center_horizontal"
    android:textSize="18sp"
    android:textStyle="bold"
    />
         <View
     	android:id="@+id/blankView3"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_below = "@id/textViewAppName"
        />    
 <TextView  
	android:id="@+id/textViewUserAgreement"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@string/stringUserAgreement"
    android:layout_below="@id/blankView3"
    />   
   <Button
   		android:id="@+id/buttonProceed"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" 
        android:text="@string/stringProceed" /> 
         
</RelativeLayout>
