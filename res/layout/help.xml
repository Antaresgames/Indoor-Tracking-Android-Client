<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<TextView  
	android:id="@+id/textViewAppNameHelp"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@string/stringAppName"
    android:gravity="center_horizontal"
    android:textSize="18sp"
    android:textStyle="bold"
    />
         <View
     	android:id="@+id/blankView2"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_below = "@id/textViewAppNameHelp"
        />    
<TextView  
	android:id="@+id/textViewHelp"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@string/stringHelpContent"
    android:layout_below="@id/blankView2"
    />   
       <Button
   		android:id="@+id/buttonBackMapHelp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom = "true"
        android:text="@string/stringBackMap" /> 
    
</RelativeLayout>