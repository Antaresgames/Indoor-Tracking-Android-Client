<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+layout/relLayout"
    >
    <ImageView 
   android:id="@+id/sixthFloorMap"
   android:src="@drawable/sixthfloor"
   android:layout_width="fill_parent"
   android:layout_height="fill_parent"
   android:layout_below="@id/textViewAppName"
   />   
   <Button
   		android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:layout_alignParentBottom = "true"
        android:layout_alignParentLeft = "true"
        android:text="@string/stringBackButton" /> 
	<Button
   		android:id="@+id/buttonTransmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:layout_alignParentBottom = "true"
       	android:layout_alignParentRight = "true"
        android:text="@string/stringTransmit" 
        /> 
    </RelativeLayout>