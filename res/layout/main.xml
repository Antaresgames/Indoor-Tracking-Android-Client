<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<TextView  
	android:id="@+id/textViewAppName"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@string/stringAppName"
    android:gravity="center_horizontal"
    />
 <ImageView 
   android:id="@+id/imageViewQuestionMark"
   android:src="@drawable/questionmark"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:layout_centerInParent="true"
   android:layout_below="@id/textViewAppName"
   />   
   <Button
   		android:id="@+id/buttonInitialPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewQuestionMark"
        android:layout_centerInParent="true"
        android:text="@string/stringInputInitialLocation" /> 
</RelativeLayout>
